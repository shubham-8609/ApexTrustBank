<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_font_family">
        <item name="android:fontFamily">@font/allerta_stencil</item>
    </style>
    <style name="default_heading" parent="default_font_family">
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DrawerItemDesign" parent="TextAppearance.AppCompat.Body1">
        <!-- Font settings -->
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/allerta_stencil</item> <!-- You can use Roboto, etc. -->

        <!-- Background ripple -->
        <item name="android:background">?attr/selectableItemBackground</item>

        <!-- Extra padding for better spacing -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginVertical">@dimen/_15sdp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


</resources>
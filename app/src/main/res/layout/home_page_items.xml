<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onPrimaryColor"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="@dimen/_8sdp"
        android:showDividers="none">

        <!-- Balance Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/_6sdp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:orientation="vertical"
                android:background="@drawable/bg_balance_card">

                <TextView
                    android:id="@+id/heading_card_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, John ðŸ‘‹"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Balance"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 25,400.00"
                    android:textStyle="bold"
                    android:textSize="@dimen/_22ssp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/_4sdp" />

                <TextView
                    android:id="@+id/tv_account_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acc No: **** 9821"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/_4sdp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Grid -->
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:orientation="horizontal"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Deposit -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deposit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:strokeColor="@color/primaryColor"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/ic_deposit"
                            app:tint="@color/primaryColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deposit"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Withdraw -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_withdraw"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:strokeColor="@color/primaryColor"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/withdraw "
                            app:tint="@color/primaryColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Withdraw"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Transfer -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_transfer"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:strokeColor="@color/primaryColor"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/transfer"
                            app:tint="@color/primaryColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Transactions -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_recent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_columnWeight="1"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:strokeColor="@color/primaryColor"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/transaction"
                            app:tint="@color/primaryColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transactions"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </ScrollView>

        <!-- Recent Transactions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Transactions"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_8sdp">

            <!-- Example transaction item -->
            <TextView
                android:id="@+id/tv_last_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Paid â‚¹500 to Amazon"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:padding="@dimen/_6sdp" />

            <TextView
                android:id="@+id/tv_sc_last_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Received â‚¹1200 from Rahul"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:padding="@dimen/_6sdp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

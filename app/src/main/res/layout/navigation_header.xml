<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/_11sdp"
    android:background="@drawable/drawer_header_bg">



    <!-- Profile Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:scaleType="fitCenter"
            android:padding="@dimen/_2sdp" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/_9sdp">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Shubham Gupta"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAccountNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A/C: 1234 5678 9876"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginVertical="@dimen/_9sdp"
        android:background="#80FFFFFF" />

    <!-- Balance Info -->
    <TextView
        android:id="@+id/txtBalanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Balance"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 45,600.75"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold" />
</LinearLayout>
